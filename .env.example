# BuddyEvents Environment Variables

# Convex
NEXT_PUBLIC_CONVEX_URL=https://your-deployment.convex.cloud
CONVEX_DEPLOYMENT=your-deployment

# Clerk Auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_...
CLERK_SECRET_KEY=sk_test_...
# Clerk Frontend API URL used by Convex JWT verification
# Example (dev): https://your-app.clerk.accounts.dev
CLERK_JWT_ISSUER_DOMAIN=https://your-app.clerk.accounts.dev
# One-time token used by `users.bootstrapAdmin` via Convex CLI
ADMIN_BOOTSTRAP_TOKEN=change-me

# Monad
NEXT_PUBLIC_BUDDY_EVENTS_CONTRACT=0x...
NEXT_PUBLIC_MONAD_RPC=https://testnet-rpc.monad.xyz

# x402 Payment
PAY_TO_ADDRESS=0x...your-platform-wallet...

# Circle Wallet (optional - for developer-controlled wallets)
CIRCLE_API_KEY=
CIRCLE_ENTITY_SECRET_CIPHERTEXT=
CIRCLE_WALLET_SET_ID=

# Telegram Bot + Mini App
TELEGRAM_BOT_TOKEN=
TELEGRAM_WEBHOOK_SECRET=
TELEGRAM_BOT_USERNAME=
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=
NEXT_PUBLIC_TELEGRAM_MINIAPP_URL=

# WalletConnect (for frontend wallet connection)
NEXT_PUBLIC_WC_PROJECT_ID=

# App URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Deployer private key (for contract deployment, NOT for prod)
PRIVATE_KEY=0x...
